# https://wiki.archlinux.org/index.php/Zsh
autoload -U compinit promptinit
compinit
promptinit

# Prompt settings
PS1=$'%n@%m:%~%(!.#.$ )'

# Environment variables
PATH=$PATH:~/bin

# Enable color support of ls
if [[ "$TERM" != "dumb" ]]; then
    if [[ -x `which dircolors` ]]; then
	eval `dircolors -b`
	alias 'ls=ls --color=auto'
    fi
fi

# http://linuxshellaccount.blogspot.com/2008/07/fancy-globbing-with-zsh-on-linux-and.html
setopt extendedglob
